<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/homeRetweetImageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/exchange"/>


    <TextView
    android:id="@+id/retweetOwner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Bege Retweeted"
    android:visibility="gone"
    android:textStyle="bold"
    android:layout_marginStart="10dp"
    android:textColor="#6C6A6A"

    />

    </LinearLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/homeProfileImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/usericon" />


    <TextView
        android:id="@+id/recyEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="User"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/optionsImage"
        android:layout_width="21dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/point" />



</RelativeLayout>


    <TextView
        android:id="@+id/recyTweetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twitter tweet is here "
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        />


    <ImageView
        android:id="@+id/homeImageView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@color/black"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/recyDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textAlignment="textEnd"
        android:layout_marginEnd="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/chat"
            android:layout_marginStart="60dp"
            />


        <ImageView
            android:id="@+id/reTweetButton"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/exchange"
            android:layout_marginStart="70dp"
            />

        <ImageView
            android:id="@+id/likeButton"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/like"
            android:layout_marginStart="70dp"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/upload"
            android:layout_marginStart="70dp"
            />

    </LinearLayout>




</LinearLayout>